@model IList<Assignment1_A00972836.Models.RegionView>


@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Region </h1>

@if (@ViewBag.ErrorMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMsg
    </div>
}

@using (Html.BeginForm("IndexPost", "Home", FormMethod.Post))
{
    @Html.TextBox("newRegion", null, new { style = "width:200px" })
    <input type="submit" class="btn btn-primary" name="submitValue" value="Add" />
    <input type="submit" class="btn btn-primary" name="submitValue" value="Edit" />
    <input type="submit" class="btn btn-primary" name="submitValue" value="Delete" />
    <input type="submit" class="btn btn-primary" name="submitValue" value="Read" />

    <table class="table table-striped table-bordered">
        <tr>
            <th>Delete</th>
            <th>@Html.DisplayNameFor(model => model[0].region.RegionID)</th>
            <th>@Html.DisplayNameFor(model => model[0].region.RegionDescription)</th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@Html.CheckBoxFor(model => model[i].isChecked)  </td>
                <td>@Html.EditorFor(model => model[i].region.RegionID)</td>
                <td>@Html.EditorFor(model => model[i].region.RegionDescription)</td>

            </tr>
        }

    </table>
}

